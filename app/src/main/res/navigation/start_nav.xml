<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_nav"
    app:startDestination="@id/login">
    <fragment
        android:id="@+id/signup2"
        android:name="com.example.mealconnect.fragments.signup"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signup2_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_signup2_to_profile3"
            app:destination="@id/profile3" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.mealconnect.fragments.login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_signup2"
            app:destination="@id/signup2" />
        <action
            android:id="@+id/action_login_to_profile3"
            app:destination="@id/profile3" />
    </fragment>
    <fragment
        android:id="@+id/profile3"
        android:name="com.example.mealconnect.fragments.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>